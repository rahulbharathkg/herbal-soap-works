{
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS",
        "moduleResolution": "Node",
        "strict": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "strictPropertyInitialization": false,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitAny": false
    },
    "include": [
        "api/*.ts",
        "api/admin/*.ts",
        "api/products/*.ts"
    ],
    "exclude": [
        "node_modules",
        "frontend",
        "backend",
        "api/_lib",
        "api/entities",
        "api/test-*.ts",
        "api/db-test.ts"
    ]
}