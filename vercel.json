{
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/index.ts"
    },
    {
      "source": "/uploads/(.*)",
      "destination": "/backend/uploads/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/frontend/$1"
    }
  ],
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build",
        "installCommand": "npm install --prefix frontend",
        "buildCommand": "npm run build --prefix frontend"
      }
    },
    {
      "src": "api/index.ts",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["api/**"],
        "installCommand": "npm install --prefix api && npm run build --prefix api && npm run seed --prefix api"
      },
      "env": {
        "DATABASE_URL": "@database_url",
        "USE_SQLITE": "false",
        "NODE_ENV": "production",
        "SEED_ADMIN_EMAIL": "@seed_admin_email",
        "SEED_ADMIN_PASSWORD": "@seed_admin_password",
        "JWT_SECRET": "@jwt_secret",
        "PORT": "4000"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/index.ts"
    },
    {
      "src": "/uploads/(.*)",
      "dest": "/backend/uploads/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/$1"
    }
  ],
  "env": {
    "REACT_APP_API_BASE_URL": "https://<YOUR_VERCEL_APP_NAME>.vercel.app/api"
  }
}
