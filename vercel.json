{
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/index.ts"
    },
    {
      "source": "/uploads/(.*)",
      "destination": "/backend/uploads/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/frontend/$1"
    }
  ],
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build",
        "installCommand": "npm install --prefix frontend",
        "buildCommand": "npm run build --prefix frontend"
      }
    },
    {
      "src": "api/index.ts",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["api/**"],
        "installCommand": "npm install --prefix api && npm run build --prefix api && npm run seed --prefix api"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/index.ts"
    },
    {
      "src": "/uploads/(.*)",
      "dest": "/backend/uploads/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/$1"
    }
  ],
  "env": {
    "REACT_APP_API_BASE_URL": "https://<YOUR_VERCEL_APP_NAME>.vercel.app/api",
    "DATABASE_URL": "postgresql://postgres:Rahulav@24@db.bnolrhtxisbvsaztjiuy.supabase.co:5432/postgres?sslmode=require",
    "USE_SQLITE": "false",
    "NODE_ENV": "production",
    "SEED_ADMIN_EMAIL": "lavanya@herbal",
    "SEED_ADMIN_PASSWORD": "adminpass",
    "JWT_SECRET": "1234567890",
    "PORT": "4000"
  }
}
